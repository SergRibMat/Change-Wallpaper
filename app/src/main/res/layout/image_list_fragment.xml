<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
                name="viewModel"
                type="com.example.testingenvironment.imagelist.ImageListViewModel"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_list_grid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="6dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            app:imageUriListData="@{viewModel.imageList}"
            android:clipToPadding="false"
            tools:itemCount="16"
            tools:listitem="@layout/image_list_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nav_to_detail_btn"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:text="Add Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add_images_btn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.829" app:layout_constraintVertical_bias="0.92"/>
    <Button
            android:text="Nav to Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nav_to_detail_btn"
            app:layout_constraintEnd_toStartOf="@+id/add_images_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.516" app:layout_constraintVertical_bias="0.92"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>